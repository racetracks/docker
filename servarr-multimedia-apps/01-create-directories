---
- name: dirs
  hosts: localhost
  become: yes

  vars:
    base_directories:
      - nginx
      - radarr
      - lidarr
      - sonarr
      - bazarr

    subdirectories:
      - build
      - run
      - temp

  tasks:
    - name: Create directories and subdirectories
      file:
        path: "/opt/docker/{{ item.0 }}/{{ item.1 }}"
        state: directory
        mode: '0755'
      loop: "{{ base_directories | product(subdirectories) | list }}"
